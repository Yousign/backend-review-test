<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Domain\Entity\Event" table="event" repository-class="App\Infrastructure\Event\Repository\EventRepository">
    <indexes>
      <index name="IDX_EVENT_TYPE" columns="type"/>
    </indexes>
    <id name="id" type="bigint" column="id"/>
    <field name="type" type="EventType" column="type" nullable="false"/>
    <field name="count" type="integer" column="count" nullable="false"/>
    <field name="payload" type="json" column="payload" nullable="false">
      <options>
        <option name="jsonb">1</option>
      </options>
    </field>
    <field name="createAt" type="datetime_immutable" column="create_at" nullable="false"/>
    <field name="comment" type="text" column="comment" nullable="true"/>
    <many-to-one field="actor" target-entity="App\Domain\Entity\Actor" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="actor_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="repo" target-entity="App\Domain\Entity\Repo" fetch="LAZY">
      <cascade>
        <cascade-persist/>
      </cascade>
      <join-columns>
        <join-column name="repo_id" referenced-column-name="id" nullable="true"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
